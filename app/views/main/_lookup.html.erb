<div class="max-w-screen-xl px-4 py-16 mx-auto sm:px-6 lg:px-8 text-white">
  <div class="max-w-lg mx-auto">
    <h1 class="text-3xl font-bold text-center text-indigo-600 sm:text-3xl">inker.ink</h1>
    <p class="text-sm font-bold text-center text-grey-400">url shortener</p>
    <%= form_with(:url => '/shorten', :method => :post, class: "p-4 mt-2 mb-0 space-y-4 rounded-lg shadow-2xl") do |f| %>
      <div>
        <div class="relative mt-1">
          <%= f.text_field :url, :placeholder => 'Enter a URL to shorten', 
          autocomplete: 'off', autocorrect: 'off', autocapitalize: 'off', spellcheck: 'false',
          class: "w-full p-4 pr-12 text-black text-center text-sm border-gray-200 rounded-lg shadow-sm" %>
          <span class="absolute inset-y-0 inline-flex items-center right-4">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="w-5 h-5 text-gray-400"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
            </svg>
          </span>
        </div>
      </div>
      <%= f.submit 'Shorten', class: "block w-full px-5 py-3 text-sm font-medium text-white bg-indigo-600 rounded-lg"%>
    <% end %>
    <p class="text-sm text-center text-gray-500">
      Looking for an existing URL? <%= link_to 'View all URLs', '/urls', class: "underline" %>
    </p>
  </div>
</div>